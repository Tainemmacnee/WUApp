<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultTextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_color_selector</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="StandardSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_color_selector</item>
    </style>

    <style name="EmphasizedButton" parent="StandardButton">
        <item name="android:background">@drawable/rounded_background_yellow</item>
    </style>

</resources>