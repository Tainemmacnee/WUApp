<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">


    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.firstapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_events"
            app:destination="@id/nav_events" />
        <action
            android:id="@+id/action_nav_home_to_nav_missing_result_games"
            app:destination="@id/nav_missing_result_games" />
        <action
            android:id="@+id/action_nav_home_to_nav_upcoming_games"
            app:destination="@id/nav_upcoming_games" />
    </fragment>

    <fragment
        android:id="@+id/nav_events"
        android:name="com.example.firstapp.ui.events.EventsFragment"
        android:label="@string/menu_events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/nav_upcoming_games"
        android:name="com.example.firstapp.ui.upcominggames.UpcomingGamesFragment"
        android:label="@string/menu_upcoming_games"
        tools:layout="@layout/fragment_upcoming_games" />

    <fragment
        android:id="@+id/nav_missing_result_games"
        android:name="com.example.firstapp.ui.missingresultgames.MissingResultGamesFragment"
        android:label="@string/menu_missing_result_games"
        tools:layout="@layout/fragment_missing_result_games" />

</navigation>