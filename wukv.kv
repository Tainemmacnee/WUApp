#:import hex kivy.utils.get_color_from_hex
ScreenManagement:
    LoginPage:
    LoadingPage:

<LoginPage>:
    name: "login_page"
    FloatLayout:
        Image:
            source: 'Resources/Wellington_title_font.png'
            size_hint: 0.8, 1
            pos_hint: {'center_x': 0.5, 'center_y':0.9}
        Image:
            source: 'Resources/Ultimate_title_font.png'
            size_hint: 0.8, 0.05
            pos_hint: {'center_x': 0.5, 'center_y':0.8}
        TextInput:
            id: email
            multiline: False
            hint_text: 'Email'
            size_hint: 0.4, 0.05
            pos_hint: {'center_x': 0.5, 'center_y':0.62}
            text: 'tainemmacnee@gmail.com'
        TextInput:
            id: passw
            multiline: False
            hint_text: 'Password'
            password: True # hide password
            size_hint: 0.4, 0.05
            pos_hint: {'center_x': 0.5, 'center_y':0.55}
            text: 'bedf6Rd!a'
        Button:
            text: "Login"
            on_release:
                app.root.get_screen(app.root.current).verify_login(app.root.get_screen('login_page').ids["email"].text, app.root.get_screen('login_page').ids["passw"].text)
            size_hint: 0.4, 0.05
            pos_hint: {'center_x': 0.5, 'center_y':0.48}

<LoadingPage>:
    name: "loading_page"
    FloatLayout:
        AsyncImage:
            source: 'Resources/Loading.gif'
            pos_hint: {'center_x': 0.5, 'center_y':0.5}

<UserPage>:
    name: "user_page"
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 3
            size_hint: 1, 0.0825
            canvas:
                Color:
                    rgba: hex('#2C2C2E')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                size_hint: 0.1, 1
                source: 'Resources/Logout_small.png'
                on_release:
                    app.root.logout()
            Label:
                id: username
                text: 'User Name'
                font_size: 40
                size_hint: 0.8, 1
            ImageButton:
                size_hint: 0.1, 1
                source: 'Resources/Refresh_icon.png'
                on_release:
                    app.root.logout()
        GridLayout:
            size_hint: 1, 0.9175
            cols: 1
            canvas:
                Color:
                    rgba: hex('#555555')
                Rectangle:
                    pos: self.pos
                    size: self.size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                padding: [5,5,5,5]
                size_hint:1,0.2
                AsyncImage:
                    id: userimage
                    source: 'https://secure.gravatar.com/avatar/141e6351340866c7a943bbefdce75dc5?s=200&d=mm&r=r'
            GridLayout:
                size_hint: 1, 0.8
                cols: 1
                Accor:
                    orientation: 'vertical'
                    AccordionItem:
                        title: 'Schedule'
                        Game_RV:
                            id: upg
                    AccordionItem:
                        title: 'Teams'
                        Team_RV:
                            id: teams
                    AccordionItem:
                        title: 'Events'
                    AccordionItem:
                        title: 'Report Results'

<Game_RV>:
    viewclass: 'ComplexGameButtonItem'
    RecycleBoxLayout:
        spacing: 5
        default_size: None, 120
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<Team_RV>:
    viewclass: 'ComplexTeamButtonItem'
    RecycleBoxLayout:
        spacing: 5
        default_size: None, 120
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<ComplexGameButtonItem>:
    canvas.before:
        Color:
            rgba: hex('#2C2C2E')
        Rectangle:
            pos: self.pos
            size: self.size

    home_source: 'https://secure.gravatar.com/avatar/141e6351340866c7a943bbefdce75dc5?s=200&d=mm&r=r'
    home_name: 'Home Team'
    away_source: 'https://secure.gravatar.com/avatar/141e6351340866c7a943bbefdce75dc5?s=200&d=mm&r=r'
    away_name: 'Away Team'
    loc_text: 'Thu, 6/08/2020 ASB Sports Center #4'

    on_release:
        self.printer()
    GridLayout:
        rows: 2
        GridLayout:
            cols: 5
            size_hint: 1, 0.8
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                AsyncImage:
                    source: root.home_source
                    pos_hint: {'center_x': 0.5, 'center_y':0.5}
                    size_hint: 0.8, 0.8
            Label:
                text: root.home_name
                color: hex('#FFDC35')
                text_size: self.width, None
                font_size: sp(18)
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                padding: [5,5,5,5]
                AsyncImage:
                    source: 'Resources/vs.png'
                    size_hint: 0.4, 0.4

            Label:
                text: root.away_name
                color: hex('#FFDC35')
                text_size: self.width, None
                font_size: sp(18)
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                AsyncImage:
                    source: root.away_source
                    pos_hint: {'center_x': 0.5, 'center_y':0.5}
                    size_hint: 0.8, 0.8
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint:1,0.2
            Label:
                id: id_label1
                text: root.loc_text
                color: hex('#FFDC35')
                font_size: sp(18)

<ComplexTeamButtonItem>:
    canvas.before:
        Color:
            rgba: hex('#2C2C2E')
        Rectangle:
            pos: self.pos
            size: self.size

    team_source: 'https://secure.gravatar.com/avatar/141e6351340866c7a943bbefdce75dc5?s=200&d=mm&r=r'
    team_name: 'Home Team'

    on_release:
        self.printer()

    GridLayout:
        cols: 2
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 0.3, 1
            AsyncImage:
                source: root.team_source
                #pos_hint: {'center_x': 0.5, 'center_y':0.5}
        Label:
            text: root.team_name
            color: hex('#FFDC35')
            text_size: self.width, None
            font_size: sp(22)

<TeamPage>:
    name: "team_page"
    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            size_hint: 1, 0.0825
            canvas:
                Color:
                    rgba: hex('#2C2C2E')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                source: 'Resources/Logout_small.png'
                size_hint: 0.6, 0.6
                pos_hint: {'center_x': 0.1, 'center_y':0.5}
                on_release:
                    app.root.logout()
            Label:
                id: teamname
                text: 'Team Name'
                font_size: 40
                pos_hint: {'center_x': 0.5, 'center_y':0.5}
        FloatLayout:
            size_hint: 1, 0.9175
            canvas:
                Color:
                    rgba: hex('#555555')
                Rectangle:
                    pos: self.pos
                    size: self.size
            AsyncImage:
                id: teamimage
                source: 'https://d36m266ykvepgv.cloudfront.net/uploads/media/66h47QW8vx/s-200-200/uc-logomark-1.png'
                pos_hint: {'center_x': 0.5, 'center_y':0.8}




<test@Image+ButtonBehavior>:
    source: 'Resources/Logout.png'

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
